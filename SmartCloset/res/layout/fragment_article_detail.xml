<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
 
    <TextView
        android:id="@+id/article_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/article_img"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/article_text" />

    <EditText
        android:id="@+id/article_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/article_img"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="text" />

    <Spinner
        android:id="@+id/article_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/article_name" />
        
    <Spinner
        android:id="@+id/article_color"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/article_category" />
    
    <Spinner
        android:id="@+id/article_material"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/article_color" />

    <Button
        android:id="@+id/article_btn_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/article_btn_cancel"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="Save" />

    <Button
        android:id="@+id/article_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:textColor="@color/darkgray"
        android:text="Cancel" />
    
</RelativeLayout>

